/**index.wxss**/

.full-banner {
  height: 75%;
  padding-top: 40rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  /* background: linear-gradient(to bottom, #4b2ec8, #ba7df3); */
  background: #ea6c53;
}

.banner-title {
  width: 680rpx;
  height: 465rpx;
  position: relative;
  background: #ffd302;
  border-radius: 30rpx;
  margin-top:40rpx;
  box-shadow: 0 -5rpx 0rpx 1rpx rgba(0, 0, 0, 0.3);
}

.banner-title:before {
  display: block;
  content: '';
  position: absolute;
  width: 6rpx;
  left: 50rpx;
  top: 0;
  height: 100%;
  background: #fff;
  z-index: 0;
}

.banner-title:after {
  position: absolute;
  display: block;
  content: '';
  width: 100%;
  left: 0;
  top: 50rpx;
  height: 6rpx;
  background: #fff;
  z-index: 0;
}

.title-content {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: column nowrap;
  z-index: 2;
}

.img-title {
  width: 641rpx;
  height: 227rpx;
  margin-top: 60rpx;
}

.game-rule {
  width: 100%;
  position: relative;
  margin-top: 20rpx;
}

.game-rule text {
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 20rpx;
  background: #fff;
  line-height: 70rpx;
}

.rule-btn {
  position: absolute;
  right: 60rpx;
  top: 0rpx;
}

.fight-num {
  margin: 25rpx 0;
}

.fight-btn {
  width: 548rpx;
  height: 184rpx;
  margin: 20rpx 0rpx;
  background-image: url('https://duokeyun.oss-cn-qingdao.aliyuncs.com/wechat/wxapp/eyes_hands/images/fight_btn.png');
  background-size: 100% auto;
  background-color:none;
}

.invited {
  width: 614rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #ea6c53;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  border:2rpx #faeeaf solid;
}

.img-invited {
  width: 68rpx;
  height: 55rpx;
  margin-right: 10rpx;
}

.honor {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-bottom: 126rpx;
}

.adv-box {
  width: 680rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.adv-img {
  width: 680rpx;
  height: 200rpx;
}

.tab-content {
  padding: 25rpx 35rpx;
}

.prize-get {
  border: 2rpx #ea6c53 solid;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #ea6c53;
}

.prize-top {
  height: 130rpx;
  padding: 0 25rpx;
}

.prize-btn {
  background: linear-gradient(to right, #ffd173, #ff9d03);
  width: 196rpx;
  height: 72rpx;
  border-radius: 336rpx;
  border: 2rpx #fff solid;
  margin: 0;
}

.prize-bot {
  line-height: 60rpx;
}

.safe-icon {
  width: 35rpx;
  height: 40rpx;
}

.marquee-container {
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 25rpx;
  height: 300rpx;
  background:#f8e0a5;
}

.modal-text {
  display: flex;
  flex: 1;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  padding: 45rpx 25rpx;
  flex-flow: column nowrap;
}

.text-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin: 25rpx 0;
}

.text-icon {
  width: 55rpx;
  height: 61rpx;
  overflow: hidden;
  background-size: 100%;
  background-repeat: no-repeat;
  text-align: center;
  line-height: 61rpx;
  color: #fff;
  font-size: 36rpx;
  margin-right: 10rpx;
}

.pink {
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1523364196438&di=4a5ce5fe3b6fa2e73b09bd82e9a48b61&imgtype=0&src=http%3A%2F%2Fpic.qiantucdn.com%2F58pic%2F18%2F19%2F87%2F09f58PICBJU_1024.jpg');
}

.blue {
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1523364196438&di=4a5ce5fe3b6fa2e73b09bd82e9a48b61&imgtype=0&src=http%3A%2F%2Fpic.qiantucdn.com%2F58pic%2F18%2F19%2F87%2F09f58PICBJU_1024.jpg');
}

.textRed {
  text-align: center;
  margin-top: 10rpx;
}

.red-btn {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #f9867d;
  color: #fff;
  margin-top: 25rpx;
  font-size: 36rpx;
}

.fight-pop {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  padding: 135rpx 35rpx 35rpx;
}

.pop-head {
  position: absolute;
  left: 50%;
  margin-left: -352rpx;
  top: -50rpx;
  width: 704rpx;
  height: 178rpx;
}

.invited-btn {
  border: 2px #fff solid;
  height: 130rpx;
  border-radius: 20rpx;
  background: #fbaa0d;
  box-shadow: 0rpx 5rpx 5rpx 2rpx #ccc;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  color: #fff;
}
