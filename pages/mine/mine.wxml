<!--pages/mine/mine.wxml-->
<scroll-view class="container" scroll-y>
  <!-- 有背景区域 -->
  <view class="mine flex flex-col flex-center flex-start">
    <view class="mine-info flex flex-col flex-center">
      <image src="{{headPic}}" class="head-pic"></image>
      <text class="ft36 textLightYellow">{{nickName}}</text>
      <text class="ft30 textLightYellow">共获得娃娃{{prizeNum}}个</text>
      <view class="complaint-btn online-btn" bindtap="complanitClick">
        <image src="{{onlineIcon}}" class="line-icon"></image>
        <text class="ft30 textLightYellow">客服</text>
      </view>
      <view class="complaint-btn" bindtap="complanitClick">
        <image src="{{complanitIcon}}" class="cpt-icon"></image>
        <text class="ft30 textLightYellow">投诉</text>
      </view>
    </view>
    <view class="fight-record flex flex-row flex-center flex-between">
      <view class="record-item flex flex-col flex-center">
        <view class="flex flex-row bottom">
          <text class="ft72 textLightYellow">343</text>
          <text class="ft30 textLightYellow">次</text>
        </view>
        <text class="ft30 textLightYellow">挑战机会</text>
        <text class="ft30 textLightYellow">0次明天可用</text>
      </view>
      <view class="record-item flex flex-col flex-center">
        <view class="flex flex-row bottom">
          <text class="ft72 textLightYellow">343</text>
          <text class="ft30 textLightYellow">次</text>
        </view>
        <text class="ft30 textLightYellow">已挑战</text>
      </view>
      <view class="record-item flex flex-col flex-center">
        <view class="flex flex-row bottom">
          <text class="ft72 textLightYellow">343</text>
          <text class="ft30 textLightYellow">个</text>
        </view>
        <text class="ft30 textLightYellow">分享群数</text>
      </view>
    </view>
    <!-- 按钮组 -->
    <view class="btn-group flex flex-row flex-around">
      <button class="btn-item">
        <image src="{{wxIcon}}" class="wx-icon"></image>
        <text class="ft30 textRed">炫耀战绩</text>
      </button>
      <button class="btn-item times">
        <image src="{{fightIcon}}" class="fight-icon"></image>
        <text class="ft30 textLightYellow">获得挑战机会</text>
      </button>
    </view>
  </view>
  <!-- 更多智力挑战 -->
  <view class="more-fight flex flex-center"><text class="ft36 textRed">更多智力挑战</text></view>
  <!-- 答题列表 -->
  <view class="qa-list">
    <view class="qa-item">
      <view class="item-left">
        <image src="{{headPic}}" class="qa-pic"></image>
        <view class="item-txt">
          <text class="ft36 textBlack">知识答题，边玩边学</text>
          <text class="ft28 textGray">12道选择题，答对就有奖</text>
        </view>
      </view>
      <button class="item-btn">去答题</button>
    </view>
    <view class="qa-item">
      <view class="item-left">
        <image src="{{headPic}}" class="qa-pic"></image>
        <view class="item-txt">
          <text class="ft36 textBlack">知识答题，边玩边学</text>
          <text class="ft28 textGray">12道选择题，答对就有奖</text>
        </view>
      </view>
      <button class="item-btn">去答题</button>
    </view>
  </view>
  <!-- 底部导航 -->
  <botNav page="mine"></botNav>
</scroll-view>